<script>
    import 'ninja-keys';
    const ninja = document.querySelector('ninja-keys');
    if (ninja != null) {
        ninja.data = [
            {
            id: 'print',
            title: 'Imprimir',
            hotkey: 'ctrl+P',
            section: 'Acciones',
            handler: () => {
                // it's auto register above hotkey with this handler
                window.print();
            },
            }
        ];
    }
</script>

<style>
    @media print {
        ninja-keys {
            display: none;
        }
    }
</style>